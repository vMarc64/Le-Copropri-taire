# This file should be placed at /opt/lecopro/.env on the VPS

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=production

# API URL (public URL of the API)
API_URL=https://api.uat.lecopro.mneto.fr

# Frontend URL
FRONTEND_URL=https://uat.lecopro.mneto.fr

# -----------------------------------------------------------------------------
# Database (Supabase PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:PASSWORD@db.xxxxx.supabase.co:5432/postgres

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_ME_TO_A_SECURE_32_CHAR_SECRET
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Powens (Open Banking) - Sandbox for UAT
# -----------------------------------------------------------------------------
POWENS_DOMAIN=lecoproprietaire-sandbox
POWENS_BASE_URL=https://lecoproprietaire-sandbox.biapi.pro/2.0
POWENS_CLIENT_ID=YOUR_POWENS_CLIENT_ID
POWENS_CLIENT_SECRET=YOUR_POWENS_CLIENT_SECRET
POWENS_REDIRECT_URI=/powens/callback

