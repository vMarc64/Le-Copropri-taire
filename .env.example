# =============================================================================
# Le Copropri√©taire - Environment Variables (Production/UAT Template)
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=production

# API URL (public URL of the API)
API_URL=https://api.uat.lecopro.fr

# Frontend URL
FRONTEND_URL=https://uat.lecopro.fr

# -----------------------------------------------------------------------------
# Database (Supabase PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:PASSWORD@db.xxxxx.supabase.co:5432/postgres

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-key-min-32-chars-change-in-production
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Powens (Open Banking)
# -----------------------------------------------------------------------------
# Sandbox for UAT, Production for Prod
POWENS_DOMAIN=lecoproprietaire-sandbox
POWENS_BASE_URL=https://lecoproprietaire-sandbox.biapi.pro/2.0
POWENS_CLIENT_ID=your-client-id
POWENS_CLIENT_SECRET=your-client-secret
POWENS_REDIRECT_URI=/powens/callback

